﻿@model driveSync.Models.PassengerDTO

@{
    ViewBag.Title = "Update Passenger";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .login-container {
        max-width: 300px;
        margin-left: -7px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
    }

    h2 {
        text-align: left;
        margin-left: -7px
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    fieldset {
        width: 22%;
        border: 2px solid #ccc; /* Border style */
        border-radius: 5px; /* Rounded corners */
        padding: 10px; /* Add some padding inside the fieldset */
        margin-bottom: 20px; /* Add margin between fieldsets */
    }

    select {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #000f;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        input[type="submit"]:hover {
            background-color: dimgrey;
        }
</style>


<h2>Update Passenger</h2>

<form action="/Passenger/Update" method="post">
    <!-- Add a hidden input field for the id -->
    <input type="hidden" name="id" value="@Model.PassengerId" />

    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="@Model.firstName" />
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="@Model.lastName" />
    </div>
    <div>
        <label for="username">user name:</label>
        <input type="text" id="username" name="username" value="@Model.username" />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" value="@Model.email" />
    </div>
    <div>
        <input type="submit" value="Update Passenger" />
    </div>
</form>