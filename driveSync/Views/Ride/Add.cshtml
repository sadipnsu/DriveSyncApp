@model driveSync.Models.Driver
@{
    ViewBag.Title = "AddRide";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .login-container {
        max-width: 300px;
        margin-left: -7px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
    }

    h2 {
        text-align: left;
        margin-left: -7px
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    fieldset {
        width:22%;
        border: 2px solid #ccc; /* Border style */
        border-radius: 5px; /* Rounded corners */
        padding: 10px; /* Add some padding inside the fieldset */
        margin-bottom: 20px; /* Add margin between fieldsets */
    }

   select {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #000f;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        input[type="submit"]:hover {
            background-color: dimgrey;
        }
</style>

<h2>New Ride</h2>
<!-- Trip Information-->
<form action="/Ride/AddRide" method="POST">
    <div>
        <input type="hidden" value=@Model.DriverId name="DriverId" />
    </div>

    <div>
        <label>startLocation:</label><input type="text" name="StartLocation" />
    </div>
    <div>
        <label>endLocation:</label><input type="text" name="EndLocation" />
    </div>
    <div>
        <label>price:</label><input type="text" name="Price" />
    </div>
    <div>
        <label>Time:</label><input type="text" name="Time" />
    </div>
    <div>
        <label>dayOftheweek:</label><input type="text" name="DayOftheweek" />
    </div>
    <fieldset>
      
            
                <legend>
                    <label>Luggage:</label>
                </legend>
               
                @*<input type="text" name="ItemName" />*@
           
            <div>
                <label>Quantity:</label><input type="text" name="LuggageQuantity" />
            </div>
            <div>
                <label>Weight:</label><input type="text" name="LuggageWeight" />
            </div>
            <div>
                <label>Size:</label><input type="text" name="LuggageSize" />
            </div>
    
    </fieldset>
   
    <fieldset>
        <legend>
            <label>Bag:</label>
        </legend>
        <div>
           
            @*<input type="text" name="ItemName" />*@

        </div>
        <div>
            <label>Quantity:</label><input type="text" name="BagQuantity" />
        </div>
        <div>
            <label>Weight:</label><input type="text" name="BagWeight" />
        </div>
        <div>
            <label>Size:</label><input type="text" name="BagSize" />
        </div>
        <div>
            <input type="submit" value="Add Ride" />
        </div>
    </fieldset>
   
</form>

 
